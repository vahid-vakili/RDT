<UserControl x:Class="RDT.Style.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RDT.Style"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <PasswordBox x:Name="passwordBox" PasswordChanged="PasswordBox_PasswordChanged" VerticalAlignment="Center" Foreground="LightGray" Width="200" FontSize="16"  Background="Transparent"/>
</UserControl>
