<UserControl x:Class="RDT.Views.UcHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RDT.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,100">
                <Border Width="400" Height="190">
                    <Border.Clip>
                        <RectangleGeometry  RadiusX="10"
                                    RadiusY="10"
                                    Rect="0,0,400,200"/>
                    </Border.Clip>
                    <Grid>
                        <StackPanel>

                        <TextBlock Text="Remote Server Tool"
                                           Foreground="SkyBlue"
                                           FontSize="14"
                                           Margin="20,0,10,0"/>
                            <TextBlock Text="{Binding ApplicationInfo}"
                                           Foreground="#EEE"
                                           FontSize="14"
                                           Margin="20,20,0,0"/>
                        </StackPanel>

                    </Grid>
                </Border>
                <Border Width="330" Height="190"
                    CornerRadius="10" Margin="15,0,0,0">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Login Info."
                                   Foreground="SkyBlue"
                                   FontSize="22"
                                   Margin="20,10,10,0"/>
                            <TextBlock  Text="{Binding CurrentLoginInfo}"
                                   Foreground="#EEE"
                                   FontSize="18"
                                   Margin="20,20,0,0"/>
                        </StackPanel>
                        <Image Margin="190,10,0,50"
                           VerticalAlignment="Top" Height="60"  Width="60"                        
                           Source="/Images/user.png"/>
                    </Grid>
                </Border>
            </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Border Width="150" Height="150"
                        CornerRadius="5" Margin="0">
                    <StackPanel VerticalAlignment="Center">
                        <Button Command="{Binding WindowsRemote}" Background="Transparent" Height="75" Width="75" Cursor="Hand" BorderThickness="0">
                            <Image Source="/Images/Win.png"></Image>
                        </Button>
                        <TextBlock Text="Remote"
                               Foreground="#EEE"                                   
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Width="150" Height="150"
                        CornerRadius="5" Margin="0">
                <StackPanel VerticalAlignment="Center">
                        <Button Command="{Binding SSH}" Background="Transparent" Height="75" Width="75" Cursor="Hand" BorderThickness="0">
                            <Image Source="/Images/SSH.png"></Image>
                        </Button>
                        <TextBlock Text="SSH"
                               Foreground="#EEE"                                   
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Width="150" Height="150"
                        CornerRadius="5" Margin="0">
                <StackPanel VerticalAlignment="Center">
                        <Button Command="{Binding Ping}" Background="Transparent" Height="75" Width="75" Cursor="Hand" BorderThickness="0">
                            <Image Source="/Images/Ping.png"></Image>
                        </Button>
                        <TextBlock Text="Ping"
                               Foreground="#EEE"                                   
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Width="150" Height="150"
                        CornerRadius="5" Margin="0">
                <StackPanel VerticalAlignment="Center">
                        <Button Command="{Binding Web}" Background="Transparent" Height="75" Width="75" Cursor="Hand" BorderThickness="0">
                            <Image Source="/Images/Web.png"></Image>
                        </Button>
                        <TextBlock Text="Web"
                               Foreground="#EEE"                                   
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            <Border Width="150" Height="150"
                        CornerRadius="5" Margin="0">
                <StackPanel VerticalAlignment="Center">
                    <Button Command="{Binding Config}" Background="Transparent" Height="75" Width="75" Cursor="Hand" BorderThickness="0">
                        <Image Source="/Images/Config.png"></Image>
                    </Button>
                    <TextBlock Text="Config"
                               Foreground="#EEE"                                   
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

    </Grid>

</UserControl>
