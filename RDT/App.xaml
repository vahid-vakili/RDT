<Application x:Class="RDT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RDT"
             xmlns:viewModel="clr-namespace:RDT.ViewModels"
             xmlns:view="clr-namespace:RDT.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/MenuButton.xaml"/>

            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:UcHome/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:UserCredViewModel}">
                <view:UcUsers/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
